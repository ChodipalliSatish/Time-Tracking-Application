        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:background="@drawable/drawable_shapebutton"
            android:layout_marginTop="10dp"
            android:text="Register"
            android:id="@+id/reg"
            android:onClick = ""/>





    </LinearLayout>

</RelativeLayout>
